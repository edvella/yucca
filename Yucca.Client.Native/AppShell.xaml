<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Yucca.Client.Native.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Yucca.Client.Native.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Suppliers"
            ContentTemplate="{DataTemplate views:SupplierOverviewPage}"
            Icon="{OnPlatform 'icon_suppliers.png', iOS='icon_suppliers_ios.png', MacCatalyst='icon_suppliers_ios.png'}" />

        <ShellContent
            Title="About Yucca"
            ContentTemplate="{DataTemplate views:AboutPage}"
            Icon="{OnPlatform 'icon_about.png', iOS='icon_about_ios.png', MacCatalyst='icon_about_ios.png'}" />
    </TabBar>

</Shell>
